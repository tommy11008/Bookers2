<h1>User info</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @user  do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %><br>
  <%= f.submit 'Update User' %>
<% end %>