<p id="notice"></p>
<%= render 'error', book: @book %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= image_tag @user.get_profile_image(100,100) %></p>
      <table>
        <thead>
          <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
	        <th>Introduction</th>
	        <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
<div class="row">
  <%= link_to edit_user_path(@user), class: "btn btn-light" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
<h3>New book</h3>
<%= render 'list', book: @book %>
  <div class="col-md-8 offset-md-1">
      <h2>User</h2>
      <table class="table table-hover table-inverse">
        <thead>
		      <tr>
		      	<th>image</th>
	      		<th>name</th>
	      		<th></th>
	       	</tr>
      	</thead>
        <tbody>
          <% @users.each do |user| %>
      		<tr>
      		  <td><%= image_tag user.get_profile_image(100,100) %></td>
		      	<td><%= user.name %></td>
		      	<td><%= link_to "Show", user_path(user.id) %></td>
		      </tr>
		      <% end %>
        </tbody>
      </table>
  </div>